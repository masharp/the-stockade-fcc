#!/usr/bin/env node
"use strict";
/*
 * Express Generated Node Server - with customization and added Socket.io Web Socket
 */

/* Module Dependencies */
const app = require('../app');
const db = require('../db');
const debug = require('debug')('the-stockade:server');
const http = require('http');
const request = require('request');

/* Get port from environment and store in Express */
const port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/* Create HTTP Server */
const server = http.createServer(app);
const io = require('socket.io')(server);

/* Yahoo Finance Webservice */
const BASE_URL = 'http://finance.yahoo.com/d/quotes.csv?s=';
const URL_FORMATTER = '&f=sbjk'; // return [0] = current price, [1] = 52 week low, [2] = 52 week high

/* Listen on provided port, on all network interfaces. */
server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/* Set up Socket.io WebSocket */
io.on('connection', function(socket) {
  console.log('USER CONNECTED');
  let stockSymbols = ['AAPL', 'GOOG', 'MSFT', 'RHT'];

  fetchStockData(stockSymbols).then((response) => {
    console.log(typeof response);
    // io.emit('')
  });


  /* listen for updates to the tracked Symbols */
  socket.on('symbols:added', function(symbol) {
    console.log('NEW SYMBOL: ' + symbol);
    stockSymbols.push(symbol);

    io.emit('symbols:update', { symbols: stockSymbols });
  });

  /*lsiten for remova l of a tracked symbol */
  socket.on('symbols:removed', function(symbol) {
    console.log('REMOVE SYMBOL: ' + symbol);
    stockSymbols = stockSymbols.filter((r) => r !== symbol);

    io.emit('symbols:update', { symbols: stockSymbols });
  });

  /* Listen for User Disconnect */
  socket.on('disconnect', function() {
    console.log('USER DISCONNECTED');
  });
});

function fetchStockData(symbols) {
  let symbolsStr = symbols.join('+');
  let requestString = BASE_URL + symbolsStr + URL_FORMATTER;

  return new Promise( (resolve, reject) => {
    request.get(requestString, (error, response, body) => {
      if(error) reject(error);
      resolve(body);
    });
  });
}

/* Normalize port into string, number, or false */
function normalizePort(val) {
  let port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }
  if (port >= 0) {
    // port number
    return port;
  }
  return false;
}

/* Event listener for HTTP server 'error' event */
function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }
  let bind = typeof port === 'string' ? ('Pipe ' + port) : ('Port ' + port);

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/* Event listener for HTTP server 'listening' event */
function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string' ? ('pipe ' + addr) : ('port ' + addr.port);
  debug('Listening on ' + bind);
}

exports.closeServer = function() {
  server.close();
};
